
<form class="login-form">
  <div class="form-group">
    <label for="email-login">E-mail:</label>
    <input type="text" id="email-login" class="form-control" />
  </div>
  <div>
    <label for="password-login">Password:</label>
    <input type="password" id="password-login" class="form-control" />
  </div>
  <div>
    <button type="submit" class="btn btn-success btn-block">Login</button>
  </div>
</form>

<form class="signup-form">
  <div class="form-group">
    <label for="username-signup">Username:</label>
    <input type="text" id="username-signup" class="form-control" />
  </div>
  <div>
    <label for="email-signup">E-mail:</label>
    <input type="text" id="email-signup" class="form-control" />
  </div>
  <div>
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" class="form-control" />
  </div>
  <div>
    <button type="submit" class="btn btn-success btn-block">Signup</button>
  </div>
</form>

