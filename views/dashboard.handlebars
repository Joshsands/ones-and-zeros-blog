<section class="w-50 mx-auto">
<br>

  <h2 class="text-center">Create New Post</h2>

  <form class="new-post-form text-center">
     <h4> <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" class="form-control form-control-lg"/>
      </h4> 

     <h4>
       <label for="post-url">Link</label>
      <input id="post-url" name="post-url" class="form-control form-control-lg"/>
      </h4> 

    <button type="submit" class="btn">
      <span class="text-info">
      <i class="fa fa-plus fa-2x"></i>
      </span></button>


  </form>

</section>

{{#if posts.length}}
<section>
  <h2>Your Posts:</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link"><i class="far fa-edit fa-2x"></i></a>
    </li>
    <br>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>